<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<mvc:annotation-driven />

	<mvc:resources location="/WEB-INF/static/" mapping="/static/**" />
	
	<mvc:interceptors>
		<mvc:interceptor>
            <mvc:mapping path="/member/regist"/>
            <bean id="authenticationInterceptor" class="com.join.interceptors.AuthenticationInterceptor"/>
        </mvc:interceptor>
        
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/login" />
			<mvc:exclude-mapping path="/regist" />
			<mvc:exclude-mapping path="/main" />
			<mvc:exclude-mapping path="/static/**" />
			<bean id="sessionInterceptor" class="com.join.interceptors.SessionInterceptor"/>
		</mvc:interceptor>
	</mvc:interceptors>

	<!-- 스프링 유효성검사
	<bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" /> -->
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/view/" />
		<property name="suffix" value=".jsp" />
	</bean>
	

	<!-- context 분리 -->
	<import resource="controllerContext.xml"/>
	

</beans>
